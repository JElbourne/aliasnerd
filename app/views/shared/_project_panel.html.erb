<div class="col-sm-6">
  <div class="panel panel-default text-center">
    <div class="panel-body">
      <h3><%= project.name %></h3>
      <p><%= project.description %></p>
      <div class="btn-group  btn-group-justified" role="group" aria-label="...">
        <%= link_to "#{ project.videos.count } Screencasts", videos_path(project: project.id), class: "btn btn-default" %>
        <%= link_to "Visit App", url_for(project.web_link), class: "btn btn-default" %>
        <%= link_to "Github Repo", project.github_link, class: "btn btn-default" %>
      </div>
    </div>
    <% if current_user_admin? %>
      <div class="panel-footer">
        <%= link_to "Edit", edit_project_path(project) %>
      </div>
    <% end %>
  </div>
</div>
