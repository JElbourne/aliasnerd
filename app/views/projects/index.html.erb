<% content_for :page_title do %>
  Things We've Made
<% end %>

<div class="row">
  <% @projects.each do |project| %>
    <div class="col-sm-6">
      <div class="panel panel-default text-center">
        <div class="panel-body">
          <h3><%= project.name %></h3>
          <p><%= project.description %></p>
          <p><%= project.videos.count %> Screencasts Available</p>
          <div class="row">
            <div class="col-sm-4">
              <%= link_to "Screencasts", videos_path(project: project.id), class: "btn btn-block btn-default" %>
            </div>
            <div class="col-sm-4">
              <%= link_to "Visit App", url_for(project.web_link), class: "btn btn-block btn-default" %>
            </div>
            <div class="col-sm-4">
              <%= link_to "Github Repo", project.github_link, class: "btn btn-block btn-default" %>
            </div>
          </div>
        </div>
        <% if current_user_admin? %>
          <div class="panel-footer">
            <%= link_to "Edit", edit_project_path(project) %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<%= link_to 'New Project', new_project_path if user_signed_in? %>
